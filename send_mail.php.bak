<?php
use PHPMailer\PHPMailer\PHPMailer;
use PHPMailer\PHPMailer\Exception;

// Include PHPMailer files
require 'PHPMailer-master/src/Exception.php';
require 'PHPMailer-master/src/PHPMailer.php';
require 'PHPMailer-master/src/SMTP.php';

if ($_SERVER["REQUEST_METHOD"] == "POST") {
    $name = $_POST['name'] ?? '';
    $email = $_POST['email'] ?? '';
    $course = $_POST['course'] ?? '';
    $experience = $_POST['experience'] ?? '';
    $message = $_POST['message'] ?? '';

    // Your Gmail address (where you want to receive messages)
    $to = "newazan06@gmail.com";

    // Create email content
    $subject = "New Feedback from $name";
    $body = "Name: $name\n";
    $body .= "Email: $email\n";
    $body .= "Course: $course\n";
    $body .= "Experience: $experience\n\n";
    $body .= "Message:\n$message";

    // Create PHPMailer object
    $mail = new PHPMailer(true);

    try {
        // SMTP settings
        $mail->isSMTP();
        $mail->Host = 'smtp.gmail.com';
        $mail->SMTPAuth = true;
        $mail->Username = 'newazan06@gmail.com';  // replace with your Gmail
        $mail->Password = 'pmjm pttb cqht xypo';     // replace with app password
        $mail->SMTPSecure = 'tls';
        $mail->Port = 587;

        // Email headers
        $mail->setFrom($email, $name); // Sender (user)
        $mail->addAddress($to);        // Receiver (you)
        $mail->addReplyTo($email, $name);

        // Content
        $mail->isHTML(false);
        $mail->Subject = $subject;
        $mail->Body = $body;

        // Send mail
        $mail->send();
        echo "✅ Feedback sent successfully!";
    } catch (Exception $e) {
        echo "❌ Message could not be sent. Mailer Error: {$mail->ErrorInfo}";
    }
}
?>